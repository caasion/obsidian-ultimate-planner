{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "rootDir": "src",
    "outDir": ".",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    // "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // "skipLibCheck": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts",
    "global.d.ts",
    "**/*.svelte"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
